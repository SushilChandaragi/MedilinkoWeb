# Sample Environment Configuration
# Copy this file to .env and update with your values

# MongoDB Connection
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.mongodb.net/medilinko?retryWrites=true&w=majority

# Server Configuration
PORT=5000
